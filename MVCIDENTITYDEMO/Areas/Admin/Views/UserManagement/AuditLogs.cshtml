@model IEnumerable<MVCIDENTITYDEMO.Models.AuditLog>

@{
    ViewData["Title"] = "Audit Logs";
}

<div class="container mt-4">
    <h2><i class="bi bi-clock-history"></i> Security Audit Logs</h2>
    <p class="text-muted">Track all administrative actions and security events</p>
    <hr />

    <div class="card">
        <div class="card-body">
            <table class="table table-sm table-striped">
                <thead>
                    <tr>
                        <th>Timestamp</th>
                        <th>User</th>
                        <th>Action</th>
                        <th>Details</th>
                        <th>IP Address</th>
                        <th>Severity</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var log in Model)
                    {
                        <tr>
                            <td>@log.Timestamp.ToLocalTime().ToString("yyyy-MM-dd HH:mm:ss")</td>
                            <td>@log.UserName</td>
                            <td>@log.Action</td>
                            <td>@log.Details</td>
                            <td>@log.IpAddress</td>
                            <td>
                                @if (log.Severity == "Critical")
                                {
                                    <span class="badge bg-danger">@log.Severity</span>
                                }
                                else if (log.Severity == "Warning")
                                {
                                    <span class="badge bg-warning">@log.Severity</span>
                                }
                                else
                                {
                                    <span class="badge bg-info">@log.Severity</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
