@model List<Product>

@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    <!-- Your existing carousel -->
    <div class="row mb-4">
        <div class="col-md-12">
            <div id="productCarousel" class="carousel slide" data-ride="carousel">
                <!-- ... your existing carousel code ... -->
            </div>
        </div>
    </div>

    <!-- NEW: Add filter controls here -->
    <div class="row mb-4">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4">
                            <label for="categoryFilter">Category</label>
                            <select id="categoryFilter" class="form-control">
                                <option value="">All Categories</option>
                                @foreach (var category in ViewBag.Categories)
                                {
                                    <option value="@category.Id">@category.Name</option>
                                }
                            </select>
                        </div>
                        <div class="col-md-4">
                            <label for="priceFilter">Max Price</label>
                            <input type="number" id="priceFilter" class="form-control" placeholder="No limit" min="0">
                        </div>
                        <div class="col-md-4 d-flex align-items-end">
                            <button id="resetFilters" class="btn btn-outline-secondary">Reset Filters</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Your existing featured products header -->
    <div class="row">
        <div class="col-md-12">
            <h2 class="mb-4">Featured Products</h2>
        </div>
    </div>

    <!-- Modified product grid with filter attributes -->
    <div class="row" id="productGrid">
        @foreach (var product in Model)
        {
            <div class="col-md-4 mb-4 product-card"
                 data-category="@product.CategoryId"
                 data-price="@product.Price">
                <div class="card h-100">
                    <img src="@(string.IsNullOrEmpty(product.ImageUrl) ? "/images/products/default.jpg" : product.ImageUrl)"
                         class="card-img-top" alt="@product.Name">
                    <div class="card-body">
                        <h5 class="card-title">@product.Name</h5>
                        <p class="card-text">@product.Description</p>
                        <p class="card-text"><strong>$@product.Price.ToString("0.00")</strong></p>
                    </div>
                    <div class="card-footer d-flex justify-content-between">
                        <a asp-controller="Products" asp-action="Details" asp-route-id="@product.Id"
                           class="btn btn-outline-primary">Details</a>
                        <form asp-controller="Cart" asp-action="AddToCart" method="post">
                            <input type="hidden" name="productId" value="@product.Id" />
                            <input type="hidden" name="returnUrl" value="@Context.Request.Path@Context.Request.QueryString" />
                            <button type="submit" class="btn btn-primary">Add to Cart</button>
                        </form>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const categoryFilter = document.getElementById('categoryFilter');
            const priceFilter = document.getElementById('priceFilter');
            const resetFilters = document.getElementById('resetFilters');
            const productCards = document.querySelectorAll('.product-card');

            // Apply filters when selection changes
            categoryFilter.addEventListener('change', applyFilters);
            priceFilter.addEventListener('input', applyFilters);
            resetFilters.addEventListener('click', resetAllFilters);

            function applyFilters() {
                const selectedCategory = categoryFilter.value;
                const maxPrice = parseFloat(priceFilter.value) || Infinity;

                productCards.forEach(card => {
                    const cardCategory = card.getAttribute('data-category');
                    const cardPrice = parseFloat(card.getAttribute('data-price'));

                    const categoryMatch = !selectedCategory || cardCategory === selectedCategory;
                    const priceMatch = cardPrice <= maxPrice;

                    card.style.display = (categoryMatch && priceMatch) ? 'block' : 'none';
                });
            }

            function resetAllFilters() {
                categoryFilter.value = '';
                priceFilter.value = '';
                productCards.forEach(card => {
                    card.style.display = 'block';
                });
            }
        });
    </script>
}