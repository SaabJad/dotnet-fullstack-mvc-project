@model List<CartItem>

@{
    ViewData["Title"] = "Shopping Cart";
    decimal total = Model.Sum(item => item.Quantity * item.Product.Price);
}

<div class="container">
    <h2 class="mb-4">Your Shopping Cart</h2>

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            Your cart is empty. <a asp-controller="Home" asp-action="Index">Continue shopping</a>.
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-bordered">
                <thead class="thead-light">
                    <tr>
                        <th>Product</th>
                        <th>Price</th>
                        <th>Quantity</th>
                        <th>Subtotal</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <div class="d-flex align-items-center">
                                    <img src="@(string.IsNullOrEmpty(item.Product.ImageUrl) ? "/images/products/default.jpg" : item.Product.ImageUrl)"
                                         alt="@item.Product.Name" style="width: 60px; height: 60px; object-fit: cover; margin-right: 10px;">
                                    <div>
                                        <h6 class="mb-1">@item.Product.Name</h6>
                                        <p class="text-muted mb-0 small">@item.Product.Category.Name</p>
                                    </div>
                                </div>
                            </td>
                            <td>$@item.Product.Price.ToString("0.00")</td>
                            <td>
                                <form asp-controller="Cart" asp-action="UpdateQuantity" method="post" class="d-flex align-items-center">
                                    <input type="hidden" name="cartItemId" value="@item.Id" />
                                    <div class="input-group input-group-sm" style="width: 120px;">
                                        <div class="input-group-prepend">
                                            <button type="submit" name="quantity" value="@(item.Quantity - 1)" class="btn btn-outline-secondary">-</button>
                                        </div>
                                        <input type="text" class="form-control text-center" value="@item.Quantity" readonly>
                                        <div class="input-group-append">
                                            <button type="submit" name="quantity" value="@(item.Quantity + 1)" class="btn btn-outline-secondary">+</button>
                                        </div>
                                    </div>
                                </form>
                            </td>
                            <td>$@((item.Product.Price * item.Quantity).ToString("0.00"))</td>
                            <td>
                                <form asp-controller="Cart" asp-action="RemoveFromCart" method="post">
                                    <input type="hidden" name="cartItemId" value="@item.Id" />
                                    <button type="submit" class="btn btn-sm btn-danger">
                                        <i class="fas fa-trash"></i> Remove
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr>
                        <td colspan="3" class="text-right"><strong>Total:</strong></td>
                        <td colspan="2"><strong>$@total.ToString("0.00")</strong></td>
                    </tr>
                </tfoot>
            </table>
        </div>

        <div class="row mt-4">
            <div class="col-md-6">
                <a asp-controller="Home" asp-action="Index" class="btn btn-outline-primary">
                    <i class="fas fa-arrow-left"></i> Continue Shopping
                </a>
            </div>
            <div class="col-md-6 text-right">
                <a asp-controller="Checkout" asp-action="Index" class="btn btn-success">
                    Proceed to Checkout <i class="fas fa-arrow-right"></i>
                </a>
            </div>
        </div>
    }
</div>